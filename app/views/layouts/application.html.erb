<!DOCTYPE html>
<html>
<head>
  <title>HealthTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <h1><%= link_to "Health Tracker", root_path %></h1>
    <hr>
      <%= User.find(session[:user_id]).username %>
      <%= link_to 'Sign Up', login_path %>
      <%= link_to 'Sign Out', logout_path, method: 'get' %>
    <hr>
  </nav>

<%= yield %>

</body>
</html>
